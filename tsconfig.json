{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "__mocks__": ["__mocks__/index"],
      "features": ["features/index"],
      "screens": ["screens/index"],
      "types": ["types/index"],
      "api": ["shared/api/index"],
      "constants": ["shared/constants/index"],
      "helpers": ["shared/helpers/index"],
      "hooks": ["shared/hooks/index"],
      "navigation": ["shared/navigation/index"],
      "services": ["shared/services/index"],
      "stores": ["shared/stores/index"],
      "themes": ["shared/themes/index"],
      "translations": ["shared/translations/index"],
      "__mocks__/*": ["__mocks__/*"],
      "ui": ["shared/ui/index"],
      "assets/*": ["assets/*"],
      "features/*": ["features/*"],
      "types/*": ["types/*"],
      "screens/*": ["screens/*"],
      "api/*": ["shared/api/*"],
      "constants/*": ["shared/constants/*"],
      "helpers/*": ["shared/helpers/*"],
      "hooks/*": ["shared/hooks/*"],
      "navigation/*": ["shared/navigation/*"],
      "services/*": ["shared/services/*"],
      "stores/*": ["shared/stores/*"],
      "themes/*": ["shared/themes/*"],
      "translations/*": ["shared/translations/*"],
      "ui/*": ["shared/ui/*"],
    },
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "react-native",
      "jest",
    ],
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}